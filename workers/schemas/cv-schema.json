{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CVSchema",
  "type": "object",
  "properties": {
    "label": {
      "type": ["string", "null"]
    },
    "uri": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "comment": {
      "type": ["string", "null"]
    },
    "title": {
      "type": ["string", "null"]
    },
    "personURI": {
      "type": "string"
    },
    "targetSector": {
      "type": ["string", "null"]
    },
    "description": {
      "type": ["string", "null"]
    },
    "skills": {
      "type": ["array"],
      "items": {"$ref": "skill-schema.json#/definitions/skill"}
    },
    "workHistory": {
      "type": "array",
      "items": {"$ref": "workHistory-schema.json#/definitions/workHistory"}
    }
  },
  "required": ["personURI", "uri", "id"]
}