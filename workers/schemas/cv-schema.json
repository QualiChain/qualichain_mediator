{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CVSchema",
  "type": "object",
  "properties": {
    "label": {
      "type": "string"
    },
    "comment": {
      "type": ["string", "null"]
    },
    "title": {
      "type": "string"
    },
    "personURI": {
      "type": "string"
    },
    "targetSector": {
      "type": ["string", "null"]
    },
    "skills": {
      "type": ["array"],
      "items": {"$ref": "skill-schema.json#/definitions/skill"}
    },
    "applications": {
      "type": "array",
      "items": {"$ref": "application-schema.json#/definitions/application"}
    }
  },
  "required": ["label", "title", "personURI"]
}